<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.taskplanner.view.noteview.NoteController">
    <top>
        <MenuBar>
            <Menu text="File">
                <Menu fx:id="openAnother" mnemonicParsing="false" onAction="#listOtherNotes" text="Open another note">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                    </items>
                </Menu>
                <MenuItem text="Save" />
                <MenuItem text="Close" />
                <MenuItem fx:id="closeNoSave" mnemonicParsing="false" onAction="#closeWithoutSaving" text="Close without saving" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <AnchorPane>
            <TextArea id="noteContent" fx:id="noteContent" layoutY="37.0" prefHeight="356.0" prefWidth="600.0" promptText="Here goes note content" AnchorPane.bottomAnchor="17.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="37.0" />
            <ScrollBar layoutX="591.0" layoutY="37.0" orientation="VERTICAL" prefHeight="371.0" prefWidth="15.0" />
         <TextField fx:id="noteTitle" layoutY="13.0" prefHeight="27.0" prefWidth="610.0" promptText="Note title" />
        </AnchorPane>
    </center>
    <bottom>
        <HBox>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label fx:id="statusMessage" prefWidth="150.0" text="Waiting for Changes..." />
            </HBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Button fx:id="saveAndClose" mnemonicParsing="false" onAction="#saveAndClose" text="Save and close" />
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
